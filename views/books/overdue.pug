extends ../layout

block content

	h1 Overdue Books
	p
		a.button(href='/books/new') Create New Book
	p
		| Filters 
		a(href='/books') All
		|  
		a(href='/books?filter=overdue') Overdue
		|  
		a(href='/books?filter=checked_out') Checked Out
	table
		thead
			tr
				th Title
				th Author
				th Genre
				th Year Released
		tbody
			each book in overdueBooks
				tr
					td
						a(href='book_detail.html') #{book.title}
					td #{book.author}
					td #{book.genre}
					td #{book.first_published}